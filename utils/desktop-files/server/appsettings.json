{
  "webServer": {
    "enable": true,
    "enableDevelopmentMode": false,
    "webRoot": "{app-directory}/client"
  },
  "api": {
    "cookieName": "DjambiSession",
    "allowedOrigins": "http://localhost:8080,http://localhost:3000",
    "apiAddress": "http://localhost:5100",
    "cookieDomain": "localhost"
  },
  "log": {
    "directory": "{app-directory}/logs",
    "levels": {
      "microsoft": "Warning",
      "aspnetcore": "Warning",
      "efcore": "Warning"
    },
    "enableRequestLogging": false
  },
  "sql": {
    "connectionString": "Server=localhost,3306;Database=Apex2;Uid=root;Pwd=root;",
    "useSqliteForTesting": true
  }
}
